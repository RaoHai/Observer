<form id="signup" class="signup-form" method="post" novalidate="novalidate">
    <div class="input-wrap name-wrap">
        <i class="fa fa-user"></i>
        <input class="name" type="text" placeholder="Full Name" name="name" autocorrect="off" />
        <div class="error"></div>
    </div>
    <div class="input-wrap email-wrap">
        <i class="fa fa-envelope-o"></i>
        <input class="email" type="email" placeholder="Email Address" name="email" autocapitalize="off" autocorrect="off" />
        <div class="error"></div>
    </div>
    <div class="input-wrap password-wrap">
        <i class="fa fa-lock"></i>
        <input class="password" type="password" placeholder="Password" name="password" />
         <div class="error"></div>
    </div>

    <div class="thirdParty">
        <span>以下帐号可以直接登录:</span>
        <ul class="buttons">
            <li><a href="#" class="weibo"></a></li>
            <li><a href="#" class="qq"></a></li>
            <li><a href="#" class="renren"></a></li>
        </ul>
    </div>
    <button class="button-save flat full" type="submit">Sign Up</button>
</form>
