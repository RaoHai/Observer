<form id="login" class="login-form" method="post" novalidate="novalidate">
    <div class="input-wrap email-wrap">
        <i class="fa fa-envelope-o"></i>
        <input class="email" type="email" placeholder="Email Address" name="email" autocapitalize="off" autocorrect="off">
        <div class="error"></div>
    </div>
    <div class="input-wrap password-wrap">
        <i class="fa fa-lock"></i>
        <input class="password" type="password" placeholder="Password" name="password">
        <div class="error"></div>
    </div>
    <button class="button-save flat full" type="submit">Log in</button>
    <section class="meta">
        <a class="forgotten-password" href="{{adminUrl}}/forgotten/">Forgotten password?</a>
    </section>
</form>
