extends layout

block content
    .login-screen
        .login-icon
            img(src="components/flat-ui/dist/img/icons/svg/paper-bag.svg")
            h4 Start to use 
                b Observer
        .login-form
            form(action="/login" method="post"  enctype="application/x-www-form-urlencoded")
                .form-group
                    input.form-control.login-field#login-email(name="login-email" type="email" placeholder="Your Email")
                    label.login-field-icon.fui-mail(for="login-email")
                .form-group
                    input.form-control.login-field#login-password(name="login-password" type="password" placeholder="Password")
                    label.login-field-icon.fui-lock(for="login-password")
                input.btn.btn-primary.btn-lg.btn-block(type="submit"  value="Login")
                a.login-link(href="/register") -> create account